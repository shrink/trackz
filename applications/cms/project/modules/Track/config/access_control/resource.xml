<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/honeybee/config/access_control/1.0" 
    xmlns:env="http://berlinonline.de/schemas/honeybee/config/envelope/definition/1.0" 
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">
    <ae:configuration>
        <!-- 
            Defines all actions that shall be available upon the track resource.

            :INFO:
            In opposite to the permissions file, which will probally vanish,
            this file will serve as a source to the later rights gui,
            allowing to show the available actions per resource/module.
        -->
        <resources>
            <resource name="track">
                <description>Defines a resource that represents track documents.</description>
                <actions>
                    <action>track.edit::read</action>
                    <action>track.edit::write</action>
                    <action>track.edit::promote</action>
                    <action>track.edit::delete</action>

                    <action>track.publish::write</action>
                    <action>track.publish::promote</action>
                    <action>track.publish::demote</action>

                    <action>track.published::read</action>
                    <action>track.published::write</action>
                    <action>track.published::promote</action>
                    <action>track.published::demote</action>
                    <action>track.published::delete</action>

                    <action>track.archive::write</action>
                    <action>track.archive::promote</action>
                    <action>track.archive::demote</action>

                    <action>track.archived::read</action>
                    <action>track.archived::write</action>
                    <action>track.archived::promote</action>
                    <action>track.archived::demote</action>
                    <action>track.archived::delete</action>

                    <action>track.delete::write</action>
                </actions>
            </resource>
        </resources>
    </ae:configuration>
</ae:configurations>